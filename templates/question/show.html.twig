{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/question_show.css') }}">
{% endblock stylesheets %}

{% block title %}
    {{ question.title }}
{% endblock title %}

{% block body %}
    <div class="block">
        <div class="d-flex flex-row-nowrap align-items-center pb-30">
            {% include "partials/_rating.html.twig" with {rating: question.rating} %}
            <h3 class="mr-10"> {{ question.title }} </h3>
            <div class="question-tag">QUESTION</div>
            <img src="https://randomuser.me/api/portraits/men/20.jpg" alt="Photo de Profil" class="avatar ml-auto">
        </div>
        <p class="question-text"> {{question.content}} </p>
        <div class="separator"></div>
        <div class="pb-20">
            Nombre de réponses: {{ question.comments|length}}
        </div>

        {% for comment in question.comments %}
            <div class="d-flex flex-row-nowrap mb-20">
                <div class="d-flex flex-column">
                    <div class="d-flex flex-row-nowrap align-items-center pb-10">
                        {% include "partials/_rating.html.twig" with {rating: comment.rating} %}
                        <img class="avatar mr-10" src="https://randomuser.me/api/portraits/women/74.jpg" alt="Photo de Profil">
                        <p class="clickable">Celine Decourd</p>
                        <small class="ml-auto"> {{ comment.createdAt | format_datetime(pattern= 'd/MM/Y', locale= 'fr') }} </small>
                    </div>
                    <p class="question-response-text"> {{ comment.content }} </p>
                </div>
            </div>
        {% endfor %}

        <h3 class="pb-20">Votre réponse</h3>
        <div class="comment-form">
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <button class="btn btn-primary">Soumettre</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}